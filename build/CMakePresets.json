{
  "version": 8,
	"cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 3
  },
  "configurePresets": [
		{
			"name": "common",
			"hidden": true,
			"cacheVariables":{
				"CMAKE_CXX_STANDARD": "23",
				"JDE_VERSION": "2025.05.01",
				"MIN_REQ_CMAKE_VERSION": "3.28.3"
			}
		},
		{
			"name": "debug",
			"inherits": "common",
			"hidden": true,
			"environment":{
				"BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "win-msvc",
			"environment": {
			},
			"cacheVariables":{
				"LIB_ROOT": "$env{REPO_DIR}/install/msvc",
				"LIB_DIR": "$env{REPO_DIR}/install/msvc",
				"xCMAKE_GENERATOR": "Ninja",
				"CMAKE_CXX_COMPILER": "cl.exe",
				"CMAKE_CXX_FLAGS": "/EHsc /D_CRT_SECURE_NO_WARNINGS /D_SILENCE_CXX17_ALLOCATOR_VOID_DEPRECATION_WARNING /TP",
				"CMAKE_PREFIX_PATH": "$env{REPO_DIR}/install/msvc"
			}
		},
		{
			"name": "win-msvc-debug",
			"inherits": ["win-msvc","debug"],
			"environment": {
			},
			"cacheVariables":{
				"CMAKE_CXX_FLAGS_DEBUG": "/EHsc /D_CRT_SECURE_NO_WARNINGS /D_SILENCE_CXX17_ALLOCATOR_VOID_DEPRECATION_WARNING /Od /Zi /MDd /D_DEBUG /JMC /TP /fsanitize=address",
				"OPENSSL_ROOT_DIR": "$env{OPENSSL_ROOT_DIR}"
			}
		},
		{
			"name": "win-msvc-jde-debug",
			"inherits": "win-msvc-debug",
			"environment": {
			},
			"cacheVariables":{
				"OPENSSL_CRYPTO_LIBRARY_DIR": "$env{OPENSSL_ROOT_DIR}/lib/VC/x64/MDd",
				"JSONNET_LIB_DIR": "$env{REPO_DIR}/jsonnet/vs2017/x64/Debug",
				"JSONNET_ROOT": "$env{REPO_DIR}/jsonnet"
			}
		},
		{
			"name": "linux",
			"hidden": true,
			"inherits": "common",
			"environment": {
				"CC": "gcc-14",
				"CXX": "g++-14",
				"LIB_ROOT": "$env{REPO_DIR}/install/$env{CXX}"
			},
			"cacheVariables":{
				"CMAKE_CXX_COMPILER": "g++-14",
				"CMAKE_C_COMPILER": "gcc-14"
			}
		},
    {
      "name": "linux-relWithDebInfo",
			"inherits": "linux",
			"environment":{
				"BUILD_TYPE": "RelWithDebInfo"
			},
      "cacheVariables": {
				"CMAKE_BUILD_TYPE": "$env{BUILD_TYPE}",
				"CMAKE_BINARY_DIR": "$env(JDE_DIR)/bin/$env{BUILD_TYPE}",
				"LIB_DIR": "$env{LIB_ROOT}/$env{BUILD_TYPE}"
			}
    },
    {
      "name": "linux-debug",
			"inherits": "linux",
			"environment":{
				"BUILD_TYPE": "Debug"
			},
      "cacheVariables": {
				"CMAKE_BUILD_TYPE": "$env{BUILD_TYPE}",
				"CMAKE_BINARY_DIR": "$env(JDE_DIR)/bin/$env{BUILD_TYPE}",
				"CMAKE_CXX_FLAGS_DEBUG": "-ggdb -fsanitize=address -fsanitize=leak -fno-omit-frame-pointer -D_GLIBCXX_DEBUG=ON -static-libstdc++ -static-libasan -lrt",
				"LIB_DIR": "$env{LIB_ROOT}/$env{BUILD_TYPE}"
			}
    },
		{
			"name": "linux-jde",
			"hidden": true,
			"inherits": "linux",
			"cacheVariables": {
				"CMAKE_C_COMPILER": null,
				"CMAKE_PREFIX_PATH": "$env{LIB_ROOT}/$env{BUILD_TYPE}",
				"Boost_USE_STATIC_LIBS": false,
				"BOOST_VERSION": "1.88.0"
			}
		},
		{
			"name": "linux-jde-debug",
			"inherits": ["linux-jde","linux-debug"],
			"cacheVariables": {
				"CMAKE_PREFIX_PATH": "$env{LIB_ROOT}/$env{BUILD_TYPE}"
			}
		},
		{
			"name": "linux-jde-relWithDebInfo",
			"inherits": ["linux-jde","linux-relWithDebInfo"],
			"cacheVariables": {
				"CMAKE_PREFIX_PATH": "$env{LIB_ROOT}/$env{BUILD_TYPE}"
			}
		}
  ]
}